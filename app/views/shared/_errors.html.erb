<% if obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-x2-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">The following <%= pluralize(obj.errors.count, "error") %> prevented the article from getting created:</h2>
        </div>
        <div class="panel-body">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          <% end %>
        </div>  
      </div>
  </div>
</div>